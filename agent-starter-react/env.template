# Database Configuration
# Replace with your MongoDB connection string
DATABASE_URL=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/
DB_NAME=agent_starter_db

# JWT Configuration
# Generate strong secrets for production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ISSUER=agent-starter-app

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this-in-production

# OAuth Providers (Optional - for social login)
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Configuration (SMTP)
# Replace with your email service provider details
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com

# LiveKit Configuration (for voice AI features)
LIVEKIT_URL=wss://your-livekit-server.com
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret

# Deepgram Configuration (for speech-to-text/text-to-speech)
DEEPGRAM_API_KEY=your-deepgram-api-key

# Google Configuration (for AI language model)
GOOGLE_API_KEY=your-google-api-key

# Backend API (FastAPI) for transcripts and order extraction
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
